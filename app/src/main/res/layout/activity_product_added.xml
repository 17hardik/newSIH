                                android:scaleType="fitXY" />

                            <TextView
                                android:id="@+id/job_description2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:scaleType="fitXY"/>

